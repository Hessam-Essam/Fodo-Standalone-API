                        </div>
                    </div>

                    <!-- Phone (Right Column) -->
                    <div class="form-group grid-col-2">
                        <input type="text" class="form-input" placeholder="رقم التليفون" />
                    </div>

                    <!-- Address (Full Width) -->
                    <div class="form-group full-width">
                        <input type="text" class="form-input" placeholder="العنوان" />
                    </div>
                </form>
            </div>

            <!-- Section: Machines -->
            <div class="accordion-header">
                <div class="accordion-title">
                    ماكينات الفرع
                    <span class="chevron"></span>
                </div>
            </div>
            <div class="table-container">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>اسم الجهاز</th>
                            <th>رقم الجهاز</th>
                            <th>تاريخ اخر تسجيل دخول</th>
                            <th>الحالة</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Android SDK Built For X86</td>
                            <td>b99d4eda8478d262</td>
                            <td>25/12/2015</td>
                            <td>
                                <span class="badge badge-inactive">غير نشطة</span>
                                <button class="btn-activate" style="margin-right:8px;">تنشيط</button>
                            </td>
                        </tr>
                        <tr>
                            <td>Android SDK Built For X86</td>
                            <td>b99d4eda8478d262</td>
                            <td>25/12/2015</td>
                            <td>
                                <span class="badge badge-active">نشطة</span>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="pagination-container">
                    <div class="pagination-btn">»</div>
                    <div class="pagination-btn">›</div>
                    <div class="pagination-btn active">1</div>
                    <div class="pagination-btn">2</div>
                    <div class="pagination-btn">3</div>
                    <div class="pagination-dots">......</div>
                    <div class="pagination-btn">10</div>
                    <div class="pagination-btn">‹</div>
                    <div class="pagination-btn">«</div>
                </div>
            </div>

            <!-- Section: Users -->
            <div class="accordion-header">
                <div class="accordion-title">
                    المستخدمين التابعين للفرع
                    <span class="chevron"></span>
                </div>
                <button class="trigger-btn btn-add" onclick="openModal()">اضافة</button>
            </div>
            <div class="table-container">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th style="width: 50%;">الاسم</th>
                            <th style="width: 50%;">الصلاحية</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="empty-row"><td colspan="2"></td></tr>
                        <tr class="empty-row"><td colspan="2"></td></tr>
                    </tbody>
                </table>
                <div class="pagination-container">
                    <div class="pagination-btn">»</div>
                    <div class="pagination-btn">›</div>
                    <div class="pagination-btn active">1</div>
                    <div class="pagination-btn">2</div>
                    <div class="pagination-btn">3</div>
                    <div class="pagination-dots">......</div>
                    <div class="pagination-btn">10</div>
                    <div class="pagination-btn">‹</div>
                    <div class="pagination-btn">«</div>
                </div>
            </div>

            <!-- Section: Sales Sections -->
            <div class="accordion-header">
                <div class="accordion-title">
                    اقسام قائمة البيع
                    <span class="chevron"></span>
                </div>
                <button class="btn-add trigger-btn" onclick="openModalSales()">اضافة</button>
            </div>
            <div class="table-container">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>الاسم</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="empty-row"><td></td></tr>
                        <tr class="empty-row"><td></td></tr>
                    </tbody>
                </table>
                <div class="pagination-container">
                    <div class="pagination-btn">»</div>
                    <div class="pagination-btn">›</div>
                    <div class="pagination-btn active">1</div>
                    <div class="pagination-btn">2</div>
                    <div class="pagination-btn">3</div>
                    <div class="pagination-dots">......</div>
                    <div class="pagination-btn">10</div>
                    <div class="pagination-btn">‹</div>
                    <div class="pagination-btn">«</div>
                </div>
            </div>

            <!-- Footer Actions -->
            <div class="actions-footer">
                <button class="btn-save">حفظ</button>
                <button class="btn-cancel">الغاء</button>
            </div>

        </main>
    </div>
    <script>
        function openModal() {
            document.getElementById('usersModal').style.display = 'flex';
        }
        function closeModal() {
            document.getElementById('usersModal').style.display = 'none';
        }
        function toggleAll(source) {
            const checkboxes = document.querySelectorAll('.custom-checkbox');
            checkboxes.forEach(checkbox => {
                checkbox.checked = source.checked;
            });
        }

        function openModalSales() {
            document.getElementById('sectionsModal').style.display = 'flex';
        }

        function closeModalSales() {
            document.getElementById('sectionsModal').style.display = 'none';
        }

        function saveData() {
            alert('تم الحفظ');
            closeModal();
        }

        window.onclick = function(event) {
            if (event.target == document.getElementById('sectionsModal')) {
                closeModal();
            }
        }
    </script>
    @Html.Partial("_AddBranchUsers")
    @Html.Partial("_AddSalesDepartment")
</body>
</html>
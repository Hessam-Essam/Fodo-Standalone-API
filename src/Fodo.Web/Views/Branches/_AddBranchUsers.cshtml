<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>Users Popup</title>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #00b9f3;
            --primary-dark: #00a1d3;
            --danger: #d92d20;
            --text-main: #111827;
            --border: #e4e9f2;
            --header-bg: #e6f9ff;
            --row-hover: #f9fafb;
        }

        body {
            font-family: 'Cairo', sans-serif;
            background-color: #f3f4f6;
            padding: 20px;
        }

        /* Modal Base */
        .modal-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1000;
            align-items: center;
            justify-content: center;
        }

        .modal-content {
            background-color: #fff;
            border-radius: 12px;
            width: 500px;
            max-width: 95%;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            padding: 24px 30px;
            display: flex;
            flex-direction: column;
        }

        .modal-header {
            margin-bottom: 20px;
            text-align: right;
        }

        .modal-title {
            font-size: 16px;
            font-weight: 700;
            color: var(--text-main);
            margin: 0;
            padding-bottom: 8px;
            border-bottom: 2px solid var(--primary);
            display: inline-block;
            width: 100%;
        }

        /* Search Box */
        .search-wrapper {
            position: relative;
            margin-bottom: 16px;
        }

        .search-input {
            width: 97%;
            padding: 10px 12px 10px 0px; /* Icon on left (end in RTL) */
            border: 1px solid var(--border);
            border-radius: 6px;
            font-family: 'Cairo', sans-serif;
            font-size: 14px;
            outline: none;
        }

        .search-icon {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #9ca3af;
            width: 18px;
            height: 18px;
        }

        /* DataGrid Table Styles */
        .datagrid-container {
            border: 1px solid var(--border);
            border-radius: 6px;
            overflow: hidden;
            max-height: 300px;
            overflow-y: auto;
        }

        .datagrid {
            width: 100%;
            border-collapse: collapse;
            font-size: 14px;
        }

            .datagrid th {
                background-color: var(--header-bg);
                padding: 10px 12px;
                text-align: right;
                font-weight: 700;
                color: var(--text-main);
                border-bottom: 1px solid var(--border);
                position: sticky;
                top: 0;
                z-index: 1;
            }

            .datagrid td {
                padding: 10px 12px;
                border-bottom: 1px solid var(--border);
                background-color: #fff;
                color: #374151;
                vertical-align: middle;
            }

            .datagrid tr:hover td {
                background-color: var(--row-hover);
            }

            .datagrid tr:last-child td {
                border-bottom: none;
            }

        /* Column Widths */
        .col-check {
            width: 40px;
            text-align: center;
        }

        .col-name {
            width: auto;
        }

        .col-role {
            width: 30%;
        }

        /* Custom Checkbox */
        .custom-checkbox {
            width: 20px;
            height: 20px;
            accent-color: var(--primary);
            cursor: pointer;
            border-radius: 4px;
        }

        /* Footer */
        .modal-footer {
            margin-top: 24px;
            padding-top: 20px;
            border-top: 1px solid var(--border);
            display: flex;
            justify-content: center;
            gap: 16px;
        }

        .btn {
            padding: 8px 48px;
            border-radius: 6px;
            font-family: 'Cairo', sans-serif;
            font-size: 15px;
            font-weight: 700;
            cursor: pointer;
            border: none;
        }

        .btn-save {
            background-color: var(--primary);
            color: white;
        }

        .btn-cancel {
            background-color: var(--danger);
            color: white;
        }

        .trigger-btn {
            padding: 10px 20px;
            background: var(--primary);
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <!-- Modal Structure -->
    <div id="usersModal" class="modal-overlay">
        <div class="modal-content">

            <div class="modal-header">
                <h3 class="modal-title">المستخدمين التابعين للفرع</h3>
            </div>

            <!-- Search -->
            <div class="search-wrapper">
                <input type="text" class="search-input" placeholder="اسم المستخدم">
                <svg class="search-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
            </div>

            <!-- DataGrid (Read Only) -->
            <div class="datagrid-container">
                <table class="datagrid">
                    <thead>
                        <tr>
                            <th class="col-check">
                                <input type="checkbox" class="custom-checkbox" onchange="toggleAll(this)">
                            </th>
                            <th class="col-name">الاسم</th>
                            <th class="col-role">الصلاحية</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="col-check"><input type="checkbox" class="custom-checkbox"></td>
                            <td>حسام</td>
                            <td>مدير فرع</td>
                        </tr>
                        <tr>
                            <td class="col-check"><input type="checkbox" class="custom-checkbox"></td>
                            <td>أحمد محمد</td>
                            <td>كاشير</td>
                        </tr>
                        <tr>
                            <td class="col-check"><input type="checkbox" class="custom-checkbox"></td>
                            <td>محمود علي</td>
                            <td>مشرف</td>
                        </tr>
                        <tr>
                            <td class="col-check"><input type="checkbox" class="custom-checkbox"></td>
                            <td>سارة أحمد</td>
                            <td>خدمة عملاء</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="modal-footer">
                <button class="btn btn-save" onclick="saveData()">حفظ</button>
                <button class="btn btn-cancel" onclick="closeModal()">الغاء</button>
            </div>

        </div>
    </div>

    <script>
        function openModal() {
            document.getElementById('usersModal').style.display = 'flex';
        }

        function closeModal() {
            document.getElementById('usersModal').style.display = 'none';
        }

        function toggleAll(source) {
            checkboxes = document.querySelectorAll('.datagrid tbody .custom-checkbox');
            for(var i=0, n=checkboxes.length;i<n;i++) {
                checkboxes[i].checked = source.checked;
            }
        }

        function saveData() {
            // Collect selected users
            let selected = [];
            document.querySelectorAll('.datagrid tbody .custom-checkbox:checked').forEach(chk => {
                let row = chk.closest('tr');
                let name = row.cells[1].innerText;
                selected.push(name);
            });

            alert('تم اختيار المستخدمين: ' + (selected.length > 0 ? selected.join(', ') : 'لا يوجد'));
            closeModal();
        }

        window.onclick = function(event) {
            if (event.target == document.getElementById('usersModal')) {
                closeModal();
            }
        }
    </script>
</body>
</html>
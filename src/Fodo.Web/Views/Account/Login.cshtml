@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <title>تسجيل الدخول - فودو</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        

        :root {
            --primary: #00b9f3;
            --primary-dark: #0095cc;
            --text-dark: #1f1f1f;
            --muted: #8f9bb3;
            --border-light: #e4e9f2;
            --bg: #f7f9fc;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'LoewArabic';
            background: #e4edf6;
            direction: rtl;
            color: var(--text-dark);
            height: 695px;
        }

        .page {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100%
            /* padding: 24px; */
        }

        .card {
            width: 100%;
            height: 100%;
            background: #ffffff;
            overflow: hidden;
            display: flex;
            flex-direction: row-reverse; /* form on the right, hero on the left */
            box-shadow: 0 18px 40px rgba(0, 0, 0, 0.08);
        }

        .left-panel {
            flex: 0 0 45%;
            padding: 40px 64px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            background: #ffffff;
        }

        .left-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px;
            color: var(--muted);
            font-size: 14px;
            direction: ltr;
        }

        .language-switch {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            cursor: pointer;
        }

        .language-icon {
            width: 20px;
            height: 20px;
            border-radius: 4px;
            border: 1px solid var(--border-light);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 12px;
            color: var(--primary);
        }

        .left-header span.en {
            font-weight: 600;
            color: var(--text-dark);
        }

        .login-content {
            max-width: 360px;
        }

        .login-title {
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 8px;
        }

        .login-subtitle {
            font-size: 14px;
            color: var(--muted);
            margin-bottom: 32px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            display: block;
            font-size: 14px;
            margin-bottom: 8px;
            color: var(--text-dark);
            font-weight: 500;
        }

        .input-wrapper {
            position: relative;
        }

        .input {
            width: 100%;
            padding: 14px 16px;
            border-radius: 6px;
            border: 1px solid var(--border-light);
            background: #f8fafc;
            font-size: 14px;
            outline: none;
            transition: border-color 0.2s, box-shadow 0.2s, background 0.2s;
            font-family: 'LoewArabic';
        }

            .input::placeholder {
                color: #c0c7d3;
            }

            .input:focus {
                border-color: var(--primary);
                background: #ffffff;
                box-shadow: 0 0 0 1px rgba(0, 185, 243, 0.15);
            }

        .password-toggle {
            position: absolute;
            left: 14px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 16px;
            color: var(--muted);
            cursor: pointer;
        }

        .forgot-link {
            display: block;
            margin-top: 8px;
            font-size: 13px;
            color: var(--primary);
            text-decoration: none;
            direction: ltr;
        }

            .forgot-link:hover {
                text-decoration: underline;
            }

        .form-footer {
            display: flex;
            align-items: center;
            justify-content: flex-start;
            margin-top: 20px;
            margin-bottom: 28px;
            font-size: 14px;
        }

        .checkbox {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            cursor: pointer;
            user-select: none;
        }

            .checkbox input {
                width: 0;
                height: 0;
                opacity: 0;
                position: absolute;
            }

        .checkbox-box {
            width: 18px;
            height: 18px;
            border-radius: 3px;
            border: 1px solid var(--primary);
            display: flex;
            align-items: center;
            justify-content: center;
            background: #ffffff;
            transition: background 0.2s, border-color 0.2s;
        }

        .checkbox-check {
            width: 12px;
            height: 12px;
            background: var(--primary);
            border-radius: 2px;
            opacity: 0;
            transform: scale(0.5);
            transition: opacity 0.15s, transform 0.15s;
        }

        .checkbox input:checked + .checkbox-box .checkbox-check {
            opacity: 1;
            transform: scale(1);
        }

        .login-button {
            width: 364px;
            height: 48px;
            border: none;
            border-radius: 6px;
            background: var(--primary);
            color: #ffffff;
            font-size: 15px;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.2s, box-shadow 0.2s, transform 0.05s;
            font-family: 'LoewArabic';
        }

            .login-button:hover {
                background: var(--primary-dark);
                box-shadow: 0 10px 20px rgba(0, 185, 243, 0.35);
            }

            .login-button:active {
                transform: translateY(1px);
                box-shadow: 0 6px 14px rgba(0, 185, 243, 0.3);
            }

        .left-bottom-placeholder {
            height: 40px;
        }

        .right-panel {
            flex: 0 0 55%;
            position: relative;
            overflow: hidden;
            display: flex;
            align-items: center;
            opacity: 0.92;
            justify-content: center;
            padding: 60px 80px;
            background: var(--Color, #00ADDA);
            color: #ffffff;
        }

        .right-overlay {
            position: absolute;
            inset: 0;
            background-image: url("/Images/Login-bcg.png");
            background-size: cover;
            background-position: center;
            opacity: 0.14;
        }

        .right-gradient {
            position: absolute;
            inset: 0;
            background: radial-gradient(circle at center, rgba(255, 255, 255, 0.2), transparent 60%);
            mix-blend-mode: screen;
            opacity: 0.7;
        }

        .right-content {
            position: relative;
            /* max-width: 420px; */
            margin-left: 200px; /* hero now on the left, so spacing to the right side */
        }

        .logo-badge {
            /* width: 115px; */
            height: 80px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 2px 7px 0px 7px;
            border-radius: 24px;
            border: 1px solid #FFF;
            font-size: 24px;
            font-weight: 700;
            letter-spacing: 1px;
            background: rgba(255, 255, 255, 0.00);
        }

            .logo-badge span {
                border-radius: 22px;
                padding: 4px 16px;
                border: 2px solid rgba(255, 255, 255, 0.65);
            }

        .right-title {
            /* font-size: 26px;
            font-weight: 700;
            margin-bottom: 16px; */
            color: #FFF;
            text-align: right;
            font-family: 'LoewArabic';
            font-size: 24px;
            font-style: normal;
            font-weight: 700;
            line-height: 66px; /* 275% */
        }

        .right-text {
            color: var(--rgb-255255255, #FFF);
            font-family: 'LoewArabic';
            font-size: 12px;
            font-style: normal;
            line-height: 66px;
            width: 490px;
        }

            .right-text span {
                display: block;
                margin-top: 6px;
                color: #FFF;
                text-align: right;
                font-family: 'LoewArabic';
                font-size: 14px;
                font-style: normal;
                font-weight: 700;
                line-height: 24px; /* 171.429% */
            }

        .right-footer {
            position: absolute;
            inset-inline: 60px;
            bottom: 40px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            font-size: 12px;
            color: #FFF;
            direction: ltr;
        }

        .social {
            display: flex;
            gap: 12px;
        }

        .social-link {
            width: 24px;
            height: 24px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 13px;
            text-decoration: none;
            color: #ffffff;
            transition: background 0.2s, color 0.2s;
        }

        /* .social-link:hover {
            background: #ffffff;
            color: var(--primary-dark);
        } */

        media (max-width: 992px) {
            .card {
                flex-direction: column; /* on mobile hero on top, form below */
            }

            .right-panel {
                flex: none;
                /* min-height: 260px; */
                padding: 40px 32px 32px;
            }

            .right-content {
                margin-left: 0;
                max-width: none;
            }

            .right-footer {
                inset-inline: 32px;
                bottom: 24px;
            }

            .left-panel {
                flex: none;
                padding: 32px 24px 40px;
            }

            .login-content {
                max-width: none;
            }
        }

        media (max-width: 640px) {
            .page {
                padding: 12px;
            }

            .card {
                border-radius: 0;
            }

            .left-header {
                margin-bottom: 24px;
            }

            .login-title {
                font-size: 24px;
            }

            .right-panel {
                min-height: 220px;
            }

            .right-title {
                font-size: 22px;
            }
        }
    </style>
</head>
